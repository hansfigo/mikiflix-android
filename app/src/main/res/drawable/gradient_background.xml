<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Item pertama: latar belakang kartu (warna dasar kartu) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Item kedua: latar belakang gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:endColor="#CB000000"
                android:angle="1" />
        </shape>
    </item>
</layer-list>
